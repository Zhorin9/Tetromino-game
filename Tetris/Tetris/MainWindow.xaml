<Window x:Class="Tetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        xmlns:view="clr-namespace:Tetris.View"
        mc:Ignorable="d" 
        Title="Tetris" Height="650" Width="500" KeyDown="Window_KeyDown">

    <Border BorderThickness="2" BorderBrush="Black">
        <StackPanel Orientation="Horizontal">
            <view:GameField x:Name="GridField" Height="600" Width="300" Margin="10,0,0,0"/>
            <TextBlock Text="Next block:" Margin="10,5,0,0" FontSize="20"/>
        </StackPanel>

    </Border>
</Window>
